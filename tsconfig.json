{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": ["node_modules"],
  "include": [
    ".plasmo/index.d.ts",
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.svelte"
  ],
  "compilerOptions": {
    "sourceMap": true, // Enable source map generation
    "inlineSources": true, // Optionally include sources in source maps
    "paths": {
      "~*": ["./*"]
    },
    "baseUrl": "."
  }
}
